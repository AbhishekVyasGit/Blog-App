<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-3">
      <div class="row row-cols-4">
        <% blogs.forEach(blog => { %>
        <div class="col mb-3">
          <div class="card col" style="width: 18rem; height: 22rem;">
            <img src="<%= blog.coverImageURL %>" class="card-img-top"   style="height: 75%; width: 100%; object-fit: contain" />
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
   
    <%- include('./partials/scripts') %>
    
  </body>
</html>
